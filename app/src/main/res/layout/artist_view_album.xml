<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/artist_view_album_item"
    android:elevation="10dp"
    android:background="@drawable/background_selector_transparent"
    android:padding="8dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/artist_view_album_item_image"
        app:layout_constraintBottom_toTopOf="@+id/artist_view_album_item_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/artist_view_album_item_text"
        android:textColor="?attr/secondaryTextColor"
        android:textSize="12sp"
        android:textAlignment="center"
        android:fontFamily="@font/latoregular"
        app:layout_constraintTop_toBottomOf="@+id/artist_view_album_item_image"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>