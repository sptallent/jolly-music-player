<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/listview_item_color"
    android:paddingStart="15dp"
    android:paddingEnd="10dp"
    android:paddingTop="7.5dp"
    android:paddingBottom="8dp"
    android:id="@+id/row"
    android:clickable="true"
    android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/artistName"
            android:textColor="?attr/primaryTextColor"
            android:textSize="14sp"
            android:fontFamily="@font/latoregular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artistSongNum"
            android:textColor="?attr/secondaryTextColor"
            android:textSize="12sp"
            android:singleLine="true"
            android:layout_margin="10dp"
            android:fontFamily="@font/latoregular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/item_more"
            />

    -<ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="5dp"
        android:id="@+id/item_more"
        android:src="?attr/more"
        android:background="@drawable/background_selector_transparent"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

