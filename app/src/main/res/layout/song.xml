<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/listview_item_color"><!--android:padding="15dp"-->


    <ImageView
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:id="@+id/song_art"
        android:scaleType="fitXY"
        android:background="@color/transparent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="15dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/><!--
        android:rotationY="22.5" -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_margin="15dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/song_art"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/song_dur">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/primaryTextColor"
            android:textSize="14sp"
            android:fontFamily="@font/latoregular"
            android:maxLines="1"
            android:ellipsize="end"/>

            <TextView
                android:id="@+id/song_artist"
                android:layout_width="wrap_content"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_height="wrap_content"
                android:textColor="?attr/secondaryAccentColor"
                android:textSize="12sp"
                android:fontFamily="@font/latoregular"
                android:maxLines="1"
                android:ellipsize="end"
                />

    </LinearLayout>

    <TextView
        android:id="@+id/song_dur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="?attr/secondaryTextColor"
        android:textSize="12sp"
        android:fontFamily="@font/latoregular"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/song_more"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="5dp"
        android:id="@+id/song_more"
        android:src="?attr/more"
        android:background="@drawable/background_selector_transparent"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>